<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Le grand summary"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,cq.siteadmin.admin.properties]">
    <content 
    	jcr:primaryType="nt:unstructured"
    	sling:resourceType="granite/ui/components/foundation/container">
 		<layout
			jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/tabs"
			type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<imagetab
				jcr:primaryType="nt:unstructured"
				jcr:title="Image"
				sling:resourceType="granite/ui/components/foundation/section">
			<layout 
				jcr:primaryType="nt:unstructured" 
				margin="{Boolean}false"
				sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
     			        	<fileReference
		                    	jcr:primaryType="nt:unstructured"
		                    	fieldLabel="Image path"
		                    	name="./fileReference"
		                    	rootPath="/content/dam/nhmwww"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" 
		                    	required="{Boolean}true"/>                   
     			        	<mobileFileReference
		                    	jcr:primaryType="nt:unstructured"
		                    	fieldLabel="Mobile image path"
		                    	name="./mobileFileReference"
		                    	rootPath="/content/dam/nhmwww"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" 
		                    	required="{Boolean}true"/>   
                    	</items>
					</column>
        		</items>
     		</imagetab>
     		<normaltab
				jcr:primaryType="nt:unstructured"
				jcr:title="Other"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout 
					jcr:primaryType="nt:unstructured" 
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
		   					<title
		                    	jcr:primaryType="nt:unstructured"
		                    	fieldLabel="Title"
		                    	title="Title"
		                    	name="./title"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>   
		                    <path
		                    	jcr:primaryType="nt:unstructured"
		                    	fieldDescription="Links to"
		                    	fieldLabel="Links to"
		                    	name="./path"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
		                    	rootPath="/content/nhmwww" />  
							<newwindow
								jcr:primaryType="nt:unstructured"
								name="./newwindow"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Open in new window"
								value="{Boolean}true" />
							<exhibitionMode
								jcr:primaryType="nt:unstructured"
								name="./isExhibition"
								sling:resourceType="granite/ui/components/foundation/form/checkbox"
								text="Exhibition"
								value="{Boolean}true"
								class="cq-dialog-checkbox-showhide"
	                            show-hide-target="show-exhibition-tab show-cta-tab"
	                            should-show-when-checked="true" />
	                    	<description
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
	                            name="./description"
	                            fieldLabel="Text"
	                            useFixedInlineToolbar="{Boolean}true" >
	                            <rtePlugins jcr:primaryType="nt:unstructured">
	                                <paraformat
					        			jcr:primaryType="nt:unstructured"
					        			features="*">
					       				<formats jcr:primaryType="cq:WidgetCollection">
					       					<nhm2
					       						description="Heading 2"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h2" />
				      						<nhm3
					       						description="Heading 3"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h3" />
				      						<nhm4
					       						description="Heading 4"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h4" />
				      						<nhm5
					       						description="Heading 5"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h5" />
				      						<p
					       						description="Paragraph"
					       						jcr:primaryType="nt:unstructured"
					       						tag="p" />
					       				</formats>
					       			</paraformat>
					       			<subsuperscript
					       				jcr:primaryType="nt:unstructured"
					       				features="*" />
					 				<styles
					 					jcr:primaryType="nt:unstructured"
					 					features="*">
					 					<styles jcr:primaryType="cq:WidgetCollection">
					 						<headingBox
					 							jcr:primaryType="nt:unstructured"
					 							cssName="heading-box"
					 							text="Heading box" />
											<introText
												jcr:primaryType="nt:unstructured"
					 							cssName="intro-text"
					 							text="Intro text" />
					 					</styles>
									</styles>
									<links
										jcr:primaryType="nt:unstructured"
										features="[modifylink,unlink]" />
									<misctools
					       				jcr:primaryType="nt:unstructured"
					       				features="[specialchars]" >
					       				<specialCharsConfig jcr:primaryType="nt:unstructured">
	                                        <chars jcr:primaryType="nt:unstructured">
	                                            <copyright
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#169;"/>
	                                            <trademark
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#8482;"/>
	                                            <registered
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#174;"/>
	                                        </chars>
	                                    </specialCharsConfig>
					       			</misctools>
					      			<spellcheck
					       				jcr:primaryType="nt:unstructured"
					       				features="*" />
	                            </rtePlugins>
	                            <uiSettings jcr:primaryType="nt:unstructured">
	                                <cui jcr:primaryType="nt:unstructured">
	                                    <inline
	                                        jcr:primaryType="nt:unstructured"
	                                        toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,spellcheck#checktext,misctools#specialchars,#styles,#paraformat]">
	                                        <popovers jcr:primaryType="nt:unstructured">
	                                            <justify
	                                                jcr:primaryType="nt:unstructured"
	                                                items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
	                                                ref="justify"/>
	                                            <lists
	                                                jcr:primaryType="nt:unstructured"
	                                                items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
	                                                ref="lists"/>
	                                            <paraformat
	                                                jcr:primaryType="nt:unstructured"
	                                                items="paraformat:getFormats:paraformat-pulldown"
	                                                ref="paraformat"/>
	                                            <styles
	                                                jcr:primaryType="nt:unstructured"
	                                                items="styles:getStyles:styles-pulldown"
	                                                ref="styles"/>
	                                        </popovers>
	                                    </inline>
	                                </cui>
	                            </uiSettings>
	                        </description>    									
						</items>
					</column>
				</items>
			</normaltab>
			<exhibition
				jcr:primaryType="nt:unstructured"
				jcr:title="Exhibition"
				sling:resourceType="granite/ui/components/foundation/section"
				class="hidden showhide-target"
				id="show-exhibition-tab" >
				<layout 
					jcr:primaryType="nt:unstructured" 
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<date
								jcr:primaryType="nt:unstructured"
		                    	fieldLabel="Date"
		                    	name="./date"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>   
							<tickets
								jcr:primaryType="nt:unstructured"
		                    	fieldLabel="Ticket price"
		                    	name="./ticketPrice"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>   
							<location
								jcr:primaryType="nt:unstructured"
		                    	fieldLabel="Location"
		                    	name="./location"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>   
						</items>
					</column>
				</items>
			</exhibition>
			<calltoaction
				jcr:primaryType="nt:unstructured"
				jcr:title="Call to action"
				sling:resourceType="granite/ui/components/foundation/section" 
				class="hidden showhide-target"
				id="show-cta-tab">
				<layout 
					jcr:primaryType="nt:unstructured" 
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<ctaTitle
								jcr:primaryType="nt:unstructured"
		                    	fieldLabel="CTA title"
		                    	fieldDescription="Text is MANDATORY in Exhibition Mode"
		                    	name="./cta-title"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
		                    <ctaPath
		                    	jcr:primaryType="nt:unstructured"
		                    	fieldLabel="CTA path"
		                    	name="./cta-path"
		                    	sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
		                    	rootPath="/content/nhmwww" /> 
		                    <ctaNewwindow 
			                   	jcr:primaryType="nt:unstructured"
								name="./cta-newwindow"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="CTA open in new window"
								value="{Boolean}true" />
							<ctaIcon
			                   	jcr:primaryType="nt:unstructured"
								name="./cta-icon"
								sling:resourceType="granite/ui/components/foundation/form/checkbox"
								text="CTA icon"
								value="{Boolean}true" 
								class="cq-dialog-checkbox-showhide"
	                            show-hide-target="show-cta-type-select"
	                            should-show-when-checked="true"/>
                            <calltoactiontypecontainer
	                        	jcr:primaryType="nt:unstructured"
	                        	sling:resourceType="granite/ui/components/foundation/container" 
	                        	class="hidden showhide-target"
								id="show-cta-type-select" >
	                        	<items jcr:primaryType="nt:unstructured" >
									<calltoactionType
					                    jcr:primaryType="nt:unstructured"
					                    fieldLabel="Icon style"
					                    defaultValue="branding"
					                    name="./calltoaction-type"
										sling:resourceType="granite/ui/components/coral/foundation/form/select">
					                    <items jcr:primaryType="nt:unstructured">
					                        <alarmclock
							                    jcr:primaryType="nt:unstructured"
							                    text="Alarm clock"
							                    value="timed-entry"/>
							                <audioguide
							                    jcr:primaryType="nt:unstructured"
							                    text="Audio guide"
							                    value="audio"/>
							                <author
							                    jcr:primaryType="nt:unstructured"
							                    text="Author"
							                    value="author"/>
							                <branding
							                    jcr:primaryType="nt:unstructured"
							                    text="Branding"
							                    value="branding"/>
							                <calender
							                    jcr:primaryType="nt:unstructured"
							                    text="Calendar"
							                    value="dates"/>
							                <clock
							                    jcr:primaryType="nt:unstructured"
							                    text="Clock"
							                    value="times"/>
							                <gallery
							                    jcr:primaryType="nt:unstructured"
							                    text="Gallery"
							                    value="gallery"/>
							                <location
							                    jcr:primaryType="nt:unstructured"
							                    text="Location"
							                    value="location"/>
							                <membership
							                    jcr:primaryType="nt:unstructured"
							                    text="Membership"
							                    value="membership"/>
							                <noflashphotography
							                    jcr:primaryType="nt:unstructured"
							                    text="No flash photography"
							                    value="noflashphotography"/>
							                <nophotography
							                    jcr:primaryType="nt:unstructured"
							                    text="No photography"
							                    value="nophotography"/>
							                <subscription
							                    jcr:primaryType="nt:unstructured"
							                    text="Subscription"
							                    value="subscription"/>
							                <sunset
							                    jcr:primaryType="nt:unstructured"
							                    text="Sunset"
							                    value="after-hours"/>
							                <ticket
							                    jcr:primaryType="nt:unstructured"
							                    text="Ticket"
							                    value="tickets"/>
					                    </items>
					                </calltoactionType>
				                </items>
				            </calltoactiontypecontainer>
						</items>
					</column>
				</items>
			</calltoaction>
		</items>
	</content>
</jcr:root>

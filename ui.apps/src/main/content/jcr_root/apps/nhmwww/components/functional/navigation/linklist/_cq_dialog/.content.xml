<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Link list"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content 
    	jcr:primaryType="nt:unstructured"
    	sling:resourceType="granite/ui/components/foundation/container">
		<layout
			jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/tabs"
			type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<basic
				jcr:primaryType="nt:unstructured"
				jcr:title="Basic"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout
					jcr:primaryType="nt:unstructured"
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<numcolumns
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Number of columns"
			                    name="./numColumns"
								sling:resourceType="granite/ui/components/coral/foundation/form/select">
			                    <items jcr:primaryType="nt:unstructured">
			                        <onecolumn
			                            jcr:primaryType="nt:unstructured"
			                            text="One Column"
			                            value="firstcolumn"/>
			                        <twocolumns
			                            jcr:primaryType="nt:unstructured"
			                            text="Two Columns"
			                            value="secondcolumn"/>
			                        <threecolumns
			                            jcr:primaryType="nt:unstructured"
			                            text="Three Columns"
			                            value="thirdcolumn"/>
			                    </items>
			                </numcolumns>
			                <title
								jcr:primaryType="nt:unstructured"
								fieldLabel="Title"
								name="./title"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
							<hyperlink 
			                   	jcr:primaryType="nt:unstructured"
								fieldLabel="Hyperlink"
								name="./hyperlink"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
							<newwindow 
			                   	jcr:primaryType="nt:unstructured"
								name="./newwindow"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Open in new window"
								value="{Boolean}true" />
							<backgroundcolour
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Background colour"
			                    name="./backgroundcolor"
			                    defaultValue="white"
								sling:resourceType="granite/ui/components/coral/foundation/form/select" >
			                    <items jcr:primaryType="nt:unstructured">
			                        <white
			                            jcr:primaryType="nt:unstructured"
			                            text="White Background"
			                            value="white"/>
			                        <grey
			                            jcr:primaryType="nt:unstructured"
			                            text="Grey Background"
			                            value="grey"/>
			                    </items>
			                </backgroundcolour>
			                <description
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
	                            name="./description"
	                            fieldLabel="Description of the links"
	                            useFixedInlineToolbar="{Boolean}true" >
	                            <rtePlugins jcr:primaryType="nt:unstructured">
	                                <paraformat
					        			jcr:primaryType="nt:unstructured"
					        			features="*">
					       				<formats jcr:primaryType="cq:WidgetCollection">
					       					<nhm2
					       						description="Heading 2"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h2" />
				      						<nhm3
					       						description="Heading 3"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h3" />
				      						<nhm4
					       						description="Heading 4"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h4" />
				      						<nhm5
					       						description="Heading 5"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h5" />
				      						<p
					       						description="Paragraph"
					       						jcr:primaryType="nt:unstructured"
					       						tag="p" />
					       				</formats>
					       			</paraformat>
					       			<subsuperscript
					       				jcr:primaryType="nt:unstructured"
					       				features="*" />
					 				<styles
					 					jcr:primaryType="nt:unstructured"
					 					features="*">
					 					<styles jcr:primaryType="cq:WidgetCollection">
					 						<headingBox
					 							jcr:primaryType="nt:unstructured"
					 							cssName="heading-box"
					 							text="Heading box" />
											<introText
												jcr:primaryType="nt:unstructured"
					 							cssName="intro-text"
					 							text="Intro text" />
					 					</styles>
									</styles>
									<links
										jcr:primaryType="nt:unstructured"
										features="[modifylink,unlink]" />
									<misctools
					       				jcr:primaryType="nt:unstructured"
					       				features="[specialchars]" >
					       				<specialCharsConfig jcr:primaryType="nt:unstructured">
	                                        <chars jcr:primaryType="nt:unstructured">
	                                            <copyright
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#169;"/>
	                                            <trademark
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#8482;"/>
	                                            <registered
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#174;"/>
	                                        </chars>
	                                    </specialCharsConfig>
					       			</misctools>
					      			<spellcheck
					       				jcr:primaryType="nt:unstructured"
					       				features="*" />
	                            </rtePlugins>
	                            <uiSettings jcr:primaryType="nt:unstructured">
	                                <cui jcr:primaryType="nt:unstructured">
	                                    <inline
	                                        jcr:primaryType="nt:unstructured"
	                                        toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,spellcheck#checktext,misctools#specialchars,#styles,#paraformat]">
	                                        <popovers jcr:primaryType="nt:unstructured">
	                                            <justify
	                                                jcr:primaryType="nt:unstructured"
	                                                items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
	                                                ref="justify"/>
	                                            <lists
	                                                jcr:primaryType="nt:unstructured"
	                                                items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
	                                                ref="lists"/>
	                                            <paraformat
	                                                jcr:primaryType="nt:unstructured"
	                                                items="paraformat:getFormats:paraformat-pulldown"
	                                                ref="paraformat"/>
	                                            <styles
	                                                jcr:primaryType="nt:unstructured"
	                                                items="styles:getStyles:styles-pulldown"
	                                                ref="styles"/>
	                                        </popovers>
	                                    </inline>
	                                </cui>
	                            </uiSettings>
	                        </description>
						</items>
					</column>
				</items>
			</basic>
			<firstcolumn
				jcr:primaryType="nt:unstructured"
				jcr:title="First column"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout
					jcr:primaryType="nt:unstructured"
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<callToActionTitle
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="First column header"
								name="./firstheader"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
							<hyperlink
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="Hyperlink"
								name="./firstHeaderLink"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
							<newwindow
			                	jcr:primaryType="nt:unstructured"
								name="./firstHeaderNewwindow"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Open in new window"
								value="{Boolean}true" />
							<firstlistitems
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/multifield"
	                            class="full-width"
	                            fieldLabel="First column items" >
	                            <field
	                                jcr:primaryType="nt:unstructured"
	                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
	                                eaem-nested="NODE_STORE"
	                                name="./firstLinkListItems" >
	                                <layout
	                                    jcr:primaryType="nt:unstructured"
	                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
	                                    method="absolute"/>
	                                <items jcr:primaryType="nt:unstructured">
	                                    <column
	                                        jcr:primaryType="nt:unstructured"
	                                        sling:resourceType="granite/ui/components/foundation/container">
	                                        <items jcr:primaryType="nt:unstructured">
	                                     		<linkTitle
								                	jcr:primaryType="nt:unstructured"
													fieldLabel="Link title"
													name="./text"
													sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
												<url
								                	jcr:primaryType="nt:unstructured"
													fieldLabel="URL"
													name="./url"
													sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
													rootPath="/content/nhmwww" />
												<newwindow
								                	jcr:primaryType="nt:unstructured"
													name="./openInNewWindow"
													sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
													text="New window"
													value="{Boolean}true" />
	                                        </items>
	                                    </column>
	                                </items>
	                            </field>
	                        </firstlistitems>
						</items>
					</column>
				</items>
			</firstcolumn>
			<secondcolumn
				jcr:primaryType="nt:unstructured"
				jcr:title="Second column"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout
					jcr:primaryType="nt:unstructured"
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<callToActionTitle
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="Second column header"
								name="./secondheader"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
							<hyperlink
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="Hyperlink"
								name="./secondHeaderLink"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
							<newwindow
			                	jcr:primaryType="nt:unstructured"
								name="./secondHeaderNewwindow"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Open in new window"
								value="{Boolean}true" />
							<secondlistitems
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/multifield"
	                            class="full-width"
	                            fieldLabel="Second column items" >
	                            <field
	                                jcr:primaryType="nt:unstructured"
	                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
	                                eaem-nested="NODE_STORE"
	                                name="./secondLinkListItems" >
	                                <layout
	                                    jcr:primaryType="nt:unstructured"
	                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
	                                    method="absolute"/>
	                                <items jcr:primaryType="nt:unstructured">
	                                    <column
	                                        jcr:primaryType="nt:unstructured"
	                                        sling:resourceType="granite/ui/components/foundation/container">
	                                        <items jcr:primaryType="nt:unstructured">
	                                     		<linkTitle
								                	jcr:primaryType="nt:unstructured"
													fieldLabel="Link title"
													name="./text"
													sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
												<url
								                	jcr:primaryType="nt:unstructured"
													fieldLabel="URL"
													name="./url"
													sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
													rootPath="/content/nhmwww" />
												<newwindow
								                	jcr:primaryType="nt:unstructured"
													name="./openInNewWindow"
													sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
													text="New window"
													value="{Boolean}true" />
	                                        </items>
	                                    </column>
	                                </items>
	                            </field>
	                        </secondlistitems>
						</items>
					</column>
				</items>
			</secondcolumn>
			<thirdcolumn
				jcr:primaryType="nt:unstructured"
				jcr:title="Third column"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout
					jcr:primaryType="nt:unstructured"
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<callToActionTitle
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="Third column header"
								name="./thirdheader"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
							<hyperlink
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="Hyperlink"
								name="./thirdHeaderLink"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
							<newwindow
			                	jcr:primaryType="nt:unstructured"
								name="./thirdHeaderNewwindow"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Open in new window"
								value="{Boolean}true" />
							<thirdlistitems
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/multifield"
	                            class="full-width"
	                            fieldLabel="Third column items" >
	                            <field
	                                jcr:primaryType="nt:unstructured"
	                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
	                                eaem-nested="NODE_STORE"
	                                name="./thirdLinkListItems" >
	                                <layout
	                                    jcr:primaryType="nt:unstructured"
	                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
	                                    method="absolute"/>
	                                <items jcr:primaryType="nt:unstructured">
	                                    <column
	                                        jcr:primaryType="nt:unstructured"
	                                        sling:resourceType="granite/ui/components/foundation/container">
	                                        <items jcr:primaryType="nt:unstructured">
	                                     		<linkTitle
								                	jcr:primaryType="nt:unstructured"
													fieldLabel="Link title"
													name="./text"
													sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
												<url
								                	jcr:primaryType="nt:unstructured"
													fieldLabel="URL"
													name="./url"
													sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
													rootPath="/content/nhmwww" />
												<newwindow
								                	jcr:primaryType="nt:unstructured"
													name="./openInNewWindow"
													sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
													text="New window"
													value="{Boolean}true" />
	                                        </items>
	                                    </column>
	                                </items>
	                            </field>
	                        </thirdlistitems>
						</items>
					</column>
				</items>
			</thirdcolumn>
		</items>
    </content>
</jcr:root>
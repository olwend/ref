<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header text image"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content 
    	jcr:primaryType="nt:unstructured"
    	sling:resourceType="granite/ui/components/foundation/container">
		<layout
			jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/tabs"
			type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<imagetab
				jcr:primaryType="nt:unstructured"
				jcr:title="Image"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout
					jcr:primaryType="nt:unstructured"
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<file
		                       jcr:primaryType="nt:unstructured"
		                       autoStart="{Boolean}false"
		                       class="cq-droptarget"
		                       fieldLabel="Image asset"
		                       fieldNameParameter="./fileName"
		                       fileReferenceParameter="./fileReference"
		                       mimeTypes="[image]"
		                       multiple="{Boolean}false"
		                       name="./file"
		                       sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
		                       title="Image"
		                       uploadUrl="${suffix.path}"
		                       useHTML5="{Boolean}true" />
						</items>
					</column>
				</items>
			</imagetab>
			<advancedtab
				jcr:primaryType="nt:unstructured"
				jcr:title="Advanced"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout
					jcr:primaryType="nt:unstructured"
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<title
								jcr:primaryType="nt:unstructured"
								fieldLabel="Title"
								name="./jcr:title"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
							<alt
								jcr:primaryType="nt:unstructured"
								fieldDescription="(leave empty to use the title defined above)"
								fieldLabel="Alt text"
								name="./alt"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
							<addPadding
		                   		jcr:primaryType="nt:unstructured"
								name="./addPadding"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Add padding"
								value="{Boolean}true" />
							<description
								jcr:primaryType="nt:unstructured"
								fieldLabel="Description"
								name="./jcr:description"
								sling:resourceType="granite/ui/components/foundation/form/textarea"/>
							<imageSize
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Image size"
			                    defaultValue="4"
			                    name="./imageSize"
								sling:resourceType="granite/ui/components/coral/foundation/form/select">
			                    <items jcr:primaryType="nt:unstructured">
			                        <o1
			                            jcr:primaryType="nt:unstructured"
			                            text="One Column"
                       					value="4"
                       					selected="${Boolean}true"/>
			                        <o2
			                            jcr:primaryType="nt:unstructured"
			                            text="Two columns"
                       					value="8"/>
			                    </items>
			                </imageSize>
			                <imagePath 
			                   	jcr:primaryType="nt:unstructured"
								fieldLabel="Image link"
								name="./image-path"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
							<newwindow 
			                   	jcr:primaryType="nt:unstructured"
								name="./newwindow"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Open in new window"
								value="{Boolean}true" />
							<imagePosition
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Image position"
			                    defaultValue="right"
			                    name="./imagePosition"
								sling:resourceType="granite/ui/components/coral/foundation/form/select">
			                    <items jcr:primaryType="nt:unstructured">
			                        <o1
			                            jcr:primaryType="nt:unstructured"
			                            text="Right"
                       					value="right"
                       					selected="${Boolean}true"/>
			                        <o2
			                            jcr:primaryType="nt:unstructured"
			                            text="Left"
                       					value="left"/>
			                      	<o3
			                            jcr:primaryType="nt:unstructured"
			                            text="Top"
			                       		value="top"/>
			                    </items>
			                </imagePosition>
						</items>
					</column>
				</items>
			</advancedtab>
			<texttab
				jcr:primaryType="nt:unstructured"
				jcr:title="Text"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout
					jcr:primaryType="nt:unstructured"
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<heading
								jcr:primaryType="nt:unstructured"
								fieldLabel="Heading"
								name="./text-heading"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
								required="true" />
							<linkURL 
                				jcr:primaryType="nt:unstructured"
								fieldLabel="Link to"
								fieldDescription="Drop files or pages from the Content Finder"
								name="./linkURL"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
							<newwindowheading
                   				jcr:primaryType="nt:unstructured"
								name="./newwindowheading"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Open in new window"
								value="{Boolean}true" />
                            <addCallToAction
                            	jcr:primaryType="nt:unstructured"
	                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
	                            text="Call to action button"
	                            fieldDescription="Display a call to action button"
	                            name="./addCallToAction"
	                            value="{Boolean}true"
	                            class="cq-dialog-checkbox-showhide"
	                            show-hide-target="show-cta-tab"
	                            should-show-when-checked="true"/>
							<type
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Component style"
			                    name="./component-type"
								sling:resourceType="granite/ui/components/coral/foundation/form/select">
			                    <items jcr:primaryType="nt:unstructured">
			                        <o1
			                            jcr:primaryType="nt:unstructured"
			                            text="Standard (Grey)"
			                       		value="light-grey"/>
			                        <o2
			                            jcr:primaryType="nt:unstructured"
			                            text="Dark Grey"
			                       		value="dark-grey"/>
			                      	<o3
			                            jcr:primaryType="nt:unstructured"
			                            text="Feature Box"
			                       		value="feature-box"/>
			                    </items>
			                </type>
			                <text
	                            jcr:primaryType="nt:unstructured"
	                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
	                            name="./text"
	                            fieldLabel="Text *"
	                            useFixedInlineToolbar="{Boolean}true"
	                            required="true" >
	                            <rtePlugins jcr:primaryType="nt:unstructured">
	                                <paraformat
					        			jcr:primaryType="nt:unstructured"
					        			features="*">
					       				<formats jcr:primaryType="cq:WidgetCollection">
					       					<nhm2
					       						description="Heading 2"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h2" />
				      						<nhm3
					       						description="Heading 3"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h3" />
				      						<nhm4
					       						description="Heading 4"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h4" />
				      						<nhm5
					       						description="Heading 5"
					       						jcr:primaryType="nt:unstructured"
					       						tag="h5" />
				      						<p
					       						description="Paragraph"
					       						jcr:primaryType="nt:unstructured"
					       						tag="p" />
					       				</formats>
					       			</paraformat>
					       			<subsuperscript
					       				jcr:primaryType="nt:unstructured"
					       				features="*" />
					 				<styles
					 					jcr:primaryType="nt:unstructured"
					 					features="*">
					 					<styles jcr:primaryType="cq:WidgetCollection">
					 						<headingBox
					 							jcr:primaryType="nt:unstructured"
					 							cssName="heading-box"
					 							text="Heading box" />
											<introText
												jcr:primaryType="nt:unstructured"
					 							cssName="intro-text"
					 							text="Intro text" />
					 					</styles>
									</styles>
									<links
										jcr:primaryType="nt:unstructured"
										features="[modifylink,unlink]" />
									<misctools
					       				jcr:primaryType="nt:unstructured"
					       				features="*" >
					       				<specialCharsConfig jcr:primaryType="nt:unstructured">
	                                        <chars jcr:primaryType="nt:unstructured">
	                                            <copyright
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#169;"/>
	                                            <trademark
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#8482;"/>
	                                            <registered
	                                                jcr:primaryType="nt:unstructured"
	                                                entity="&amp;#174;"/>
	                                        </chars>
	                                    </specialCharsConfig>
					       			</misctools>
					      			<spellcheck
					       				jcr:primaryType="nt:unstructured"
					       				features="*" />
	                            </rtePlugins>
	                            <uiSettings jcr:primaryType="nt:unstructured">
	                                <cui jcr:primaryType="nt:unstructured">
	                                    <inline
	                                        jcr:primaryType="nt:unstructured"
	                                        toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat]">
	                                        <popovers jcr:primaryType="nt:unstructured">
	                                            <justify
	                                                jcr:primaryType="nt:unstructured"
	                                                items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
	                                                ref="justify"/>
	                                            <lists
	                                                jcr:primaryType="nt:unstructured"
	                                                items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
	                                                ref="lists"/>
	                                            <paraformat
	                                                jcr:primaryType="nt:unstructured"
	                                                items="paraformat:getFormats:paraformat-pulldown"
	                                                ref="paraformat"/>
	                                            <styles
	                                                jcr:primaryType="nt:unstructured"
	                                                items="styles:getStyles:styles-pulldown"
	                                                ref="styles"/>
	                                        </popovers>
	                                    </inline>
	                                </cui>
	                            </uiSettings>
	                        </text>
						</items>
					</column>
				</items>
			</texttab>
			<ctacontainer 
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container"
				jcr:title="Call To Action"
				class="hidden showhide-target"
				id="show-cta-tab">
				<items jcr:primaryType="nt:unstructured">
					<calltoactiontab
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/section" >
						<layout
							jcr:primaryType="nt:unstructured"
							margin="{Boolean}false"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items jcr:primaryType="nt:unstructured">
							<column
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container" >
								<items jcr:primaryType="nt:unstructured">
									<colourSectionOverride
					                    jcr:primaryType="nt:unstructured"
					                    fieldLabel="Section theme"
					                    name="./section-override"
										sling:resourceType="granite/ui/components/coral/foundation/form/select">
					                    <items jcr:primaryType="nt:unstructured">
					                        <inherit
						                        jcr:primaryType="nt:unstructured"
						                        text="Inherit from section"
						                        value="_"/>
						                    <aboutUs
						                        jcr:primaryType="nt:unstructured"
						                        text="About us"
						                        value="about-us"/>
						                    <businessServices
						                        jcr:primaryType="nt:unstructured"
						                        text="Business services"
						                        value="business-services"/>
						                    <contactUs
						                        jcr:primaryType="nt:unstructured"
						                        text="Contact us"
						                        value="contact-us"/>
						                    <discover
						                        jcr:primaryType="nt:unstructured"
						                        text="Discover"
						                        value="discover"/>
						                    <ourScience
						                        jcr:primaryType="nt:unstructured"
						                        text="Our science"
						                        value="our-science"/>
						                    <schools
						                        jcr:primaryType="nt:unstructured"
						                        text="Schools"
						                        value="schools"/>
						                    <supportUs
						                        jcr:primaryType="nt:unstructured"
						                        text="Support us"
						                        value="support-us"/>
						                    <takePart
						                        jcr:primaryType="nt:unstructured"
						                        text="Take part"
						                        value="take-part"/>
						                    <visit
						                        jcr:primaryType="nt:unstructured"
						                        text="Visit"
						                        value="visit"/>
					                    </items>
					                </colourSectionOverride>
					                <callToActionTitle
					                	jcr:primaryType="nt:unstructured"
										fieldLabel="Title"
										name="./cta-title"
										sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
					                <callToActionLink
					                	jcr:primaryType="nt:unstructured"
										fieldLabel="Link to"
										fieldDescription="Please enter the link of the call to action button"
										name="./cta-path"
										sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
										rootPath="/content/nhmwww" />
					                <callToActionNewWindow
					                	jcr:primaryType="nt:unstructured"
										name="./cta-newwindow"
										sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
										text="Open in new window"
										value="{Boolean}true" />
									<ctaicon
		                            	jcr:primaryType="nt:unstructured"
			                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
			                            text="CTA icon"
			                            name="./cta-icon"
			                            value="{Boolean}true"
			                            class="cq-dialog-checkbox-showhide"
			                            show-hide-target="show-cta-type-select"
			                            should-show-when-checked="true"/>
			                        <calltoactiontypecontainer
			                        	jcr:primaryType="nt:unstructured"
			                        	sling:resourceType="granite/ui/components/foundation/container" 
			                        	class="hidden showhide-target"
										id="show-cta-type-select" >
			                        	<items jcr:primaryType="nt:unstructured" >
							            	<calltoactionType
								            	jcr:primaryType="nt:unstructured"
								            	sling:resourceType="granite/ui/components/coral/foundation/form/select"
							                    fieldLabel="Icon style"
							                    name="./calltoaction-type"
							                    defaultValue="tickets" >
						                    	<items jcr:primaryType="nt:unstructured">
							                        <alarmclock
									                    jcr:primaryType="nt:unstructured"
									                    text="Alarm Clock"
									                    value="timed-entry"/>
									                <audioguide
									                    jcr:primaryType="nt:unstructured"
									                    text="Audio Guide"
									                    value="audio"/>
									                <author
									                    jcr:primaryType="nt:unstructured"
									                    text="Author"
									                    value="author"/>
									                <branding
									                    jcr:primaryType="nt:unstructured"
									                    text="Branding"
									                    value="branding"/>
									                <calender
									                    jcr:primaryType="nt:unstructured"
									                    text="Calendar"
									                    value="dates"/>
									                <clock
									                    jcr:primaryType="nt:unstructured"
									                    text="Clock"
									                    value="times"/>
									                <gallery
									                    jcr:primaryType="nt:unstructured"
									                    text="Gallery"
									                    value="gallery"/>
									                <location
									                    jcr:primaryType="nt:unstructured"
									                    text="Location"
									                    value="location"/>
									                <membership
									                    jcr:primaryType="nt:unstructured"
									                    text="Membership"
									                    value="membership"/>
									                <noflashphotography
									                    jcr:primaryType="nt:unstructured"
									                    text="No Flash Photography"
									                    value="noflashphotography"/>
									                <nophotography
									                    jcr:primaryType="nt:unstructured"
									                    text="No Photography"
									                    value="nophotography"/>
									                <subscription
									                    jcr:primaryType="nt:unstructured"
									                    text="Subscription"
									                    value="subscription"/>
									                <sunset
									                    jcr:primaryType="nt:unstructured"
									                    text="Sunset"
									                    value="after-hours"/>
									                <ticket
									                    jcr:primaryType="nt:unstructured"
									                    text="Ticket"
									                    value="tickets"/>
						                    	</items>
						                    </calltoactionType>
						                </items>
						            </calltoactiontypecontainer>
								</items>
							</column>
						</items>
					</calltoactiontab>
				</items>
			</ctacontainer>
		</items>
    </content>
</jcr:root>
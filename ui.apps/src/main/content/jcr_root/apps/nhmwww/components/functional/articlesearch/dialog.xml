<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Article search"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <articleSearch
                jcr:primaryType="cq:Panel"
                title="Article Search">
                <items jcr:primaryType="cq:WidgetCollection">
                	<title
                    	jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield" />
                    <rootPath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Path"
                        name="./rootpath"
                        width="155"
                        xtype="pathfield"
                        rootPath="/content/nhmwww"
                        allowBlank="false"/>
                    <tags
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Tags"
                        name="./cq:tags"
                        xtype="tags"
                        defaultvalue=""/>
                    <tagsoperator
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Tags logical operator"
                        name="./tagsoperator"
                        type="select"
                        xtype="selection"
                        defaultValue="or">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <datecreated
                                jcr:primaryType="nt:unstructured"
                                text="And"
                                value="and"/>
                            <datemodified
                                jcr:primaryType="nt:unstructured"
                                text="Or"
                                value="or"/>
                        </options>
                    </tagsoperator>
                    <order
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Order By"
                        name="./order"
                        type="select"
                        xtype="selection"
                        defaultValue="datecreated">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <datecreated
                                jcr:primaryType="nt:unstructured"
                                text="Date created"
                                value="datecreated"/>
                            <datemodified
                                jcr:primaryType="nt:unstructured"
                                text="Date modified"
                                value="datemodified"/>
                        </options>
                    </order>
                    <limit
                    	jcr:primaryType="cq:Widget"
                        fieldLabel="Limit"
                        fieldDescription="Default value is 10 if left blank"
                        name="./limit"
                        xtype="textfield" />
                    <rowsize
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Row size"
                        name="./rowsize"
                        type="select"
                        xtype="selection"
                        allowBlank="false">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <datecreated
                                jcr:primaryType="nt:unstructured"
                                text="Full width"
                                value="fullwidth"/>
                            <datemodified
                                jcr:primaryType="nt:unstructured"
                                text="Two column"
                                value="twocolumn"/>
                        </options>
                    </rowsize>
                    <showReadMore
	                    jcr:primaryType="cq:Widget"
	                    fieldLabel="Show 'Read more' link"
	                    name="./showReadMore"
	                    type="checkbox"
	                    xtype="selection"/>
                </items>
            </articleSearch>
        </items>
    </items>
</jcr:root>

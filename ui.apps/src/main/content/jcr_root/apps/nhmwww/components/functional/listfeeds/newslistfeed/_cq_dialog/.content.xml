<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="News List Feed"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,cq.siteadmin.admin.properties]"
    mode="edit">
    <content 
    	jcr:primaryType="nt:unstructured"
    	sling:resourceType="granite/ui/components/foundation/container">

    			<layout
    				jcr:primaryType="nt:unstructured"
    				sling:resourceType="granite/ui/components/foundation/layouts/tabs"
    				type="nav" />
    			<items jcr:primaryType="nt:unstructured">
    				<basicTab
    					jcr:primaryType="nt:unstructured"
    					jcr:title="Basic"
    					sling:resourceType="granite/ui/components/foundation/section">
    					<layout
    						jcr:primaryType="nt:unstructured"
    						margin="{Boolean}false"
    						sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
    					<items jcr:primaryType="nt:unstructured">
    						<column
    							jcr:primaryType="nt:unstructured"
    							sling:resourceType="granite/ui/components/foundation/container">
    							<items jcr:primaryType="nt:unstructured">
    								<title
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Component title"
				                        name="./title"
				                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
			                        <hyperlink
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Hyperlink"
				                        itemId="hyperlink"
				                        name="./hyperlink"
				                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" 
    									rootPath="/content/nhmwww" />
			                        <newwindow
    									jcr:primaryType="nt:unstructured"
    									fieldLabel="Open in new window"
    									name="./newwindow"
    									sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
    									text="Open in New Window"
    									value="{Boolean}true" />
				                    <componentID
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Component ID"
				                        fieldDescription="Use numbers, must not be used by other components on this page."
				                        name="./componentID"
				                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
				                    <numberOfItems
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Number of Items"
				                        name="./noOfItems"
				                        xtype="granite/ui/components/foundation/form/numberfield" />
									<hideMonths
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Hide months heading"
				                        name="./hideMonths"
				                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
				                        text="Hide months heading"
    									value="{Boolean}true" />
				                    <rootPagePath
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Root page"
				                        fieldDescription="The page used to start the search retrieving news stories"
				                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" 
    									rootPath="/content/nhmwww"
    									name="./rootPagePath" />
			                        <tags
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Tags"
				                        name="./cqTags"
				                        sling:resourceType="cq/gui/components/common/tagspicker"
				                        allowBulkEdit="{Boolean}true"
				                        cq-msm-lockable="cq:tags"
				                        cq:showOnCreate="{Boolean}true" />
    							</items>
    						</column>
    					</items>
    				</basicTab>
    			</items>

    </content>
</jcr:root>

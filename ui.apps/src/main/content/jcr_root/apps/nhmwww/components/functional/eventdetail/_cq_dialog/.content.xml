<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Event Detail"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,cq.siteadmin.admin.properties]">
    <content 
    	jcr:primaryType="nt:unstructured"
    	sling:resourceType="granite/ui/components/foundation/container">
		<layout
			jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/tabs"
			type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<configurationtab
				jcr:primaryType="nt:unstructured"
				jcr:title="Event General Config"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout 
					jcr:primaryType="nt:unstructured" 
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<!-- Hidden fields -->
							<datesRecurrence
			                    jcr:primaryType="nt:unstructured"
			                    name="./jcr:datesRecurrence"
			                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
			                <allDayRecurrence
			                    jcr:primaryType="nt:unstructured"
			                    name="./jcr:allDayRecurrence"
			                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
			                <timesRecurrence
			                    jcr:primaryType="nt:unstructured"
			                    name="./jcr:timesRecurrence"
			                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
			                <durationsRecurrence
			                    jcr:primaryType="nt:unstructured"
			                    name="./jcr:durationsRecurrence"
			                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
			                <eventPagePath
			                    jcr:primaryType="nt:unstructured"
			                    name="./jcr:eventPagePath"
			                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
							<eventsList
								jcr:primaryType="nt:unstructured"
								name="./eventSelect"
								text="Event Type"
								sling:resourceType="granite/ui/components/foundation/form/radiogroup" >	
	                           	<items jcr:primaryType="nt:unstructured">
									<school
			                            jcr:primaryType="nt:unstructured"
			                            sling:resourceType="granite/ui/components/foundation/form/radio/"
			                            text="School"
			                            value="School"
			                            class="cq-dialog-radio-showhide"
		                                show-hide-target="schooltabcontainer" />
			                        <science
			                            jcr:primaryType="nt:unstructured"
			                            sling:resourceType="granite/ui/components/foundation/form/radio/"
			                            text="Science"
			                            value="Science"
			                            class="cq-dialog-radio-showhide"
			                            show-hide-target="sciencetabcontainer" />
			                        <tring
			                            jcr:primaryType="nt:unstructured"
			                            sling:resourceType="granite/ui/components/foundation/form/radio/"
			                            text="Tring"
			                            value="Tring"
			                            class="cq-dialog-radio-showhide" />
			                        <visitor
			                            jcr:primaryType="nt:unstructured"
			                            sling:resourceType="granite/ui/components/foundation/form/radio/"
			                            text="Visitor"
			                            value="Visitor"
			                            class="cq-dialog-radio-showhide" />
								</items>
							</eventsList>
							
							<soldOut
			                    jcr:primaryType="nt:unstructured"
			                    name="./jcr:soldOut"
			                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
							
							<eventTitle
		                        jcr:primaryType="nt:unstructured"
		                        fieldLabel="Event Title"
		                        name="./jcr:eventTitle"
		                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                        required="{Boolean}true"/>
	                        <eventDescription
		                        jcr:primaryType="nt:unstructured"
		                        fieldLabel="Event Description"
		                        name="./jcr:description"
		                        sling:resourceType="granite/ui/components/foundation/form/textarea"
		                        required="{Boolean}true"
		                        maxlength="{Long}125"
		                        emptyText="The max length for this field is 125 characters"/>
	                        <eventVenue
		                        jcr:primaryType="nt:unstructured"
		                        fieldLabel="Event Venue"
		                        name="./eventVenue"
		                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		                        required="{Boolean}true"/>
	                        <eventGroup
		                        jcr:primaryType="nt:unstructured"
		                        fieldLabel="Event Group"
		                        name="./eventGroup"
		                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
	                        <eventTileLink
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="Event Tile Link"
								name="./eventTileLink"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
		                    <tags
		                        jcr:primaryType="nt:unstructured"
		                        fieldLabel="Tags"
		                        name="./cq:tags"
		                        sling:resourceType="cq/gui/components/common/tagspicker"
		                        allowBulkEdit="{Boolean}true"
		                        cq-msm-lockable="cq:tags"
		                        cq:showOnCreate="{Boolean}true" />
	                        <keywords
		                        jcr:primaryType="nt:unstructured"
		                        fieldLabel="Keywords"
		                        name="./keywords"
		                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield" />
		                    <fieldset
		                        jcr:primaryType="nt:unstructured"
		                        jcr:title="Dates"
		                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
		                        <layout
		                            jcr:primaryType="nt:unstructured"
		                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
		                        <items jcr:primaryType="nt:unstructured">
		                            <column
		                                jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/foundation/container">
		                                <items jcr:primaryType="nt:unstructured">
		                                
		                                    <dates
		                                        jcr:primaryType="nt:unstructured"
		                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
		                                        class="full-width"
		                                        fieldLabel="Dates">
		                                        <field
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
		                                            eaem-nested="NODE_STORE"
		                                            name="./dates">
		                                            <layout
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
		                                                method="absolute"/>
		                                            <items jcr:primaryType="nt:unstructured">
		                                                <column
		                                                    jcr:primaryType="nt:unstructured"
		                                                    sling:resourceType="granite/ui/components/foundation/container">
		                                                    <items jcr:primaryType="nt:unstructured">
			                                                    <isRecurring
											                   		jcr:primaryType="nt:unstructured"
																	text="Recurring"
																	name="./isRecurring"
																	sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
																	value="{Boolean}true" />
		                                                        <dateTime
																	jcr:primaryType="nt:unstructured"
																	displayedFormat="MM-DD-YY"
																	sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
																	type="date"
																	fieldLabel="Date"
																	name="./dateTime" />
																<allDay
											                   		jcr:primaryType="nt:unstructured"
																	text="All Day Event"
																	name="./allDay"
																	sling:resourceType="granite/ui/components/foundation/form/checkbox"
																	value="{Boolean}true"/>
																<eventDuration
									                            	jcr:primaryType="nt:unstructured"
									                            	fieldLabel="Duration"
									                            	fieldDescription="Please enter the duration in minutes."
									                            	name="./eventDuration"
									                            	sling:resourceType="granite/ui/components/foundation/form/textfield" />
		                                                    </items>
		                                                </column>
		                                            </items>
		                                        </field>
		                                    </dates>
		                                </items>
		                            </column>
		                        </items>
		                    </fieldset>

						</items>
   					</column>
       			</items>
        	</configurationtab>
        	<pricetab
        		jcr:primaryType="nt:unstructured"
				jcr:title="Event Prices"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout 
					jcr:primaryType="nt:unstructured" 
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<adult
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Adult *"
			                    name="./adultPrice"
			                    sling:resourceType="granite/ui/components/foundation/form/textfield"
			                    class="required-price" >
			                </adult>
			                <concession
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Concession *"
			                    name="./concessionPrice"
			                    sling:resourceType="granite/ui/components/foundation/form/textfield"
			                    class="required-price" >
			                </concession>
			                <member
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Member *"
			                    name="./memberPrice"
			                    sling:resourceType="granite/ui/components/foundation/form/textfield"
			                    class="required-price" >
			                </member>
			                <family
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Family *"
			                    name="./familyPrice"
			                    sling:resourceType="granite/ui/components/foundation/form/textfield"
			                    class="required-price" >
			                </family>
			                <custom
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="Custom *"
			                    name="./customPrice"
			                    sling:resourceType="granite/ui/components/foundation/form/textfield"
			                    class="required-price" >
			                </custom>
			                <eventListing
			                    jcr:primaryType="nt:unstructured"
			                    required="{Boolean}true"
			                    fieldLabel="Event Listing Price *"
			                    name="./eventListingPrice"
			                    sling:resourceType="granite/ui/components/foundation/form/textfield">
			                </eventListing>
						</items>
					</column>
				</items>
        	</pricetab>
        	<imagetab
        		jcr:primaryType="nt:unstructured"
				jcr:title="Image Link Config"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout 
					jcr:primaryType="nt:unstructured" 
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<ctaLink
			                	jcr:primaryType="nt:unstructured"
								fieldLabel="CTA Link"
								name="./ctaLink"
								sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
								rootPath="/content/nhmwww" />
							<ctaText
			                    jcr:primaryType="nt:unstructured"
			                    fieldLabel="CTA Text"
			                    name="./ctaText"
			                    sling:resourceType="granite/ui/components/foundation/form/textfield" />
		                    <image
		                       jcr:primaryType="nt:unstructured"
		                       autoStart="{Boolean}false"
		                       class="cq-droptarget"
		                       fieldLabel="Image asset"
		                       fieldNameParameter="./fileName"
		                       fileReferenceParameter="./fileReference"
		                       mimeTypes="[image]"
		                       multiple="{Boolean}false"
		                       name="./file"
		                       sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
		                       title="Image"
		                       uploadUrl="${suffix.path}"
		                       useHTML5="{Boolean}true" />
						</items>
					</column>
				</items>
        	</imagetab>
        	<schooltabcontainer jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container"
				jcr:title="School Config"
				class="cq-dialog-container-showhide"
				id="schooltabcontainer" >
				<items jcr:primaryType="nt:unstructured">
		        	<schooltab
		        		jcr:primaryType="nt:unstructured"
						jcr:title="School Conifig"
						sling:resourceType="granite/ui/components/foundation/section">
						<layout 
							jcr:primaryType="nt:unstructured" 
							margin="{Boolean}false"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items jcr:primaryType="nt:unstructured">
							<column
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<subject
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Subject"
				                        name="./cq:subject"
				                        sling:resourceType="cq/gui/components/common/tagspicker"
				                        allowBulkEdit="{Boolean}true"
				                        cq-msm-lockable="cq:tags"
				                        cq:showOnCreate="{Boolean}true" />
									<capacity
					                    jcr:primaryType="nt:unstructured"
					                    fieldLabel="Capacity"
					                    name="./capacity"
					                    sling:resourceType="granite/ui/components/foundation/form/textfield" />
				                    <eventDuration
					                    jcr:primaryType="nt:unstructured"
					                    fieldLabel="Event Duration"
					                    name="./eventDuration"
					                    sling:resourceType="granite/ui/components/foundation/form/textfield" />
								</items>
							</column>
						</items>
		        	</schooltab>
		       	</items>
		    </schooltabcontainer>
		    <sciencetabcontainer jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container"
				jcr:title="Science Config"
				class="cq-dialog-container-showhide"
				id="sciencetabcontainer" >
				<items jcr:primaryType="nt:unstructured">
		        	<sciencetab
		        		jcr:primaryType="nt:unstructured"
						jcr:title="Science Config"
						sling:resourceType="granite/ui/components/foundation/section">
						<layout 
							jcr:primaryType="nt:unstructured" 
							margin="{Boolean}false"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items jcr:primaryType="nt:unstructured">
							<column
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items jcr:primaryType="nt:unstructured">
									<subjectScience
				                        jcr:primaryType="nt:unstructured"
				                        fieldLabel="Subject"
				                        name="./cq:subjectScience"
				                        sling:resourceType="cq/gui/components/common/tagspicker"
				                        allowBulkEdit="{Boolean}true"
				                        cq-msm-lockable="cq:tags"
				                        cq:showOnCreate="{Boolean}true" />
			                        <speakerDetails
					                    jcr:primaryType="nt:unstructured"
					                    fieldLabel="Speaker Details"
					                    name="./speakerDetails"
					                    sling:resourceType="granite/ui/components/foundation/form/textfield" />
								</items>
							</column>
						</items>
		        	</sciencetab>
		        </items>
		    </sciencetabcontainer>
        	<soldouttab
        		jcr:primaryType="nt:unstructured"
				jcr:title="Sold Out"
				sling:resourceType="granite/ui/components/foundation/section">
				<layout 
					jcr:primaryType="nt:unstructured" 
					margin="{Boolean}false"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<column
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
						
						</items>
					</column>
				</items>
        	</soldouttab>
		</items>
	</content>
</jcr:root>

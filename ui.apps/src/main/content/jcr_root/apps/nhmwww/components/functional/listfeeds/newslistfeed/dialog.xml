<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}400"
    title="News List Feed"
    width="1000"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <basic
                jcr:primaryType="cq:Widget"
                title="Basic"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Component title"
                        name="./title"
                        width="155"
                        xtype="textfield"/>
                    <hyperlink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hyperlink"
                        itemId="hyperlink"
                        name="./hyperlink"
                        width="155"
                        xtype="pathfield"/>
                    <newwindow
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window"
                        name="./newwindow"
                        type="checkbox"
                        xtype="selection"/>
                    <componentID
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Component ID"
                        fieldDescription="Use numbers, must not be used by other components on this page."
                        name="./componentID"
                        width="155"
                        xtype="textfield"/>
                    <numberOfItems
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Number of Items"
                        name="./noOfItems"
                        width="155"
                        xtype="numberfield"/>
					<hideMonths
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide months heading"
                        name="./hideMonths"
                        type="checkbox"
                        xtype="selection"/>
                    <rootPagePath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Root page"
                        fieldDescription="The page used to start the search retrieving news stories"
                        name="./rootPagePath"
                        width="155"
                        xtype="pathfield"/>
					<tags
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Tags"
                        name="./cqTags"
                        xtype="tags"/>
                </items>
            </basic>
        </items>
    </items>
</jcr:root>
